{% extends 'base.html.twig' %}

{% block title %}ODClient{% endblock %}

{% block body %}
    <div class="container">
        <div class="row align-items-center justify-content-center">
            <h1>OD Client</h1>
            <div class="col-md-12">
                <form class="mx-auto" action="{{ path('search') }}" method="get">
                    <div class="form-row">
                        <div class="col-10 mb-2">
                            <input type="text" name="word" class="form-control" id="inputWord" placeholder="Type word here...">
                        </div>
                        <div class="col">
                            <button type="submit" class="btn btn-primary mb-2">Search</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div class="row h-100">
            <div class="col-md-12">
                <div class="tagsCloud"></div>
            </div>
        </div>
    </div>
{% endblock %}
